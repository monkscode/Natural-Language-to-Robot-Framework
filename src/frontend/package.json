{
  "name": "mark1-frontend",
  "version": "1.0.0",
  "description": "Frontend for Mark 1 AI Test Automation Platform with Self-Healing capabilities",
  "scripts": {
    "test": "jest --run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "script.js",
      "!**/node_modules/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}